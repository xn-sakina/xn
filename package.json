{
  "name": "xn",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "build": "pnpm -r --filter './packages/**' run build",
    "dev": "pnpm -r --filter './packages/**' --parallel run dev",
    "push": "vary push",
    "vp": "vary vp",
    "release": "vary release",
    "release:only": "vary release:only",
    "release:quick": "vary release:quick",
    "clean:output": "vary clean:output",
    "normalize:pkg": "swno scripts/normalizePkg.ts",
    "preinstall": "npx only-allow pnpm"
  },
  "devDependencies": {
    "@changesets/cli": "^2.25.0",
    "@fz6m/eslint-plugin-sakina": "^2.0.2",
    "@types/fs-extra": "^9.0.13",
    "@types/lodash": "^4.14.186",
    "@types/node": "^18.11.4",
    "@xn-sakina/vary": "^1.0.2",
    "chalk": "^4.0.0",
    "commit-verify": "^1.0.3",
    "eslint": "^8.26.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "lodash": "4.17.21",
    "only-allow": "^1.1.1",
    "prettier": "^2.7.1",
    "prettier-plugin-organize-imports": "^3.1.1",
    "prettier-plugin-packagejson": "^2.3.0",
    "rimraf": "^3.0.2",
    "sort-package-json": "^1.57.0",
    "swno": "^1.3.1",
    "typescript": "^4.8.4",
    "zx": "^7.1.1"
  },
  "lint-staged": {
    "*.{jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "license": "MIT",
  "engines": {
    "pnpm": "^7.0.1",
    "node": ">= 16.14.1",
    "yarn": "forbidden, use pnpm",
    "npm": "forbidden, use pnpm"
  }
}
