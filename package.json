{
  "name": "xn",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "build": "pnpm -r --filter './packages/**' run build",
    "dev": "pnpm -r --filter './packages/**' --parallel run dev",
    "lint": "pnpm eslint './packages/*/src/**/*'",
    "lint:apps": "pnpm -r --filter './apps/*' exec eslint './src'",
    "push": "vary push",
    "vp": "vary vp",
    "release": "vary release",
    "release:only": "vary release:only",
    "release:quick": "vary release:quick",
    "clean:output": "vary clean:output",
    "normalize:pkg": "tsx scripts/normalizePkg.ts",
    "preinstall": "npx only-allow pnpm"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/fs-extra": "^11.0.4",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.10.4",
    "@xn-sakina/mental": "^4.2.0",
    "@xn-sakina/vary": "^1.3.4",
    "chalk": "^4.1.2",
    "commit-verify": "^1.1.0",
    "esbuild": "0.19.9",
    "eslint": "^8.55.0",
    "eslint-plugin-sakina": "^4.4.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "lodash": "4.17.21",
    "only-allow": "^1.2.1",
    "prettier": "^3.1.1",
    "prettier-plugin-organize-imports": "^3.2.4",
    "prettier-plugin-packagejson": "^2.4.7",
    "rimraf": "^5.0.5",
    "sort-package-json": "^1.57.0",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "zx": "^7.2.3"
  },
  "lint-staged": {
    "*.{jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "license": "MIT",
  "engines": {
    "pnpm": "^8",
    "node": ">=18",
    "yarn": "forbidden, use pnpm",
    "npm": "forbidden, use pnpm"
  },
  "pnpm": {
    "overrides": {
      "esbuild": "$esbuild"
    }
  },
  "packageManager": "pnpm@8.10.0"
}
