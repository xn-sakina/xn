{
  "name": "xn",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "build": "pnpm -r --filter ./packages run build",
    "dev": "pnpm -r --filter ./packages --parallel run dev",
    "push": "vary push",
    "vp": "vary vp",
    "release": "vary release",
    "release:only": "vary release:only",
    "release:quick": "vary release:quick",
    "clean:output": "vary clean:output",
    "normalize:pkg": "swno scripts/normalizePkg.ts"
  },
  "devDependencies": {
    "@changesets/cli": "^2.22.0",
    "@fz6m/eslint-plugin-sakina": "^1.2.0",
    "@types/fs-extra": "^9.0.13",
    "@types/lodash": "^4.14.181",
    "@types/node": "^16.0.0",
    "@xn-sakina/vary": "^1.0.1",
    "chalk": "^4.0.0",
    "commit-verify": "^1.0.3",
    "eslint": "^8.12.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "lodash": "4.17.21",
    "only-allow": "^1.1.0",
    "prettier": "^2.6.2",
    "prettier-plugin-organize-imports": "^2.3.4",
    "prettier-plugin-packagejson": "^2.2.17",
    "rimraf": "^3.0.2",
    "sort-package-json": "^1.55.0",
    "swno": "^1.1.7",
    "typescript": "^4.6.3",
    "zx": "^5.3.0"
  },
  "lint-staged": {
    "*.{jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "license": "MIT"
}
