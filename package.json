{
  "name": "xn",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "build": "pnpm -r --filter './packages/**' run build",
    "dev": "pnpm -r --filter './packages/**' --parallel run dev",
    "format": "pnpm -r --filter './packages/**' eslint --fix",
    "push": "vary push",
    "vp": "vary vp",
    "release": "vary release",
    "release:only": "vary release:only",
    "release:quick": "vary release:quick",
    "clean:output": "vary clean:output",
    "normalize:pkg": "tsx scripts/normalizePkg.ts",
    "preinstall": "npx only-allow pnpm"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@types/fs-extra": "^11.0.1",
    "@types/lodash": "^4.14.197",
    "@types/node": "^20.5.3",
    "@xn-sakina/vary": "^1.1.1",
    "chalk": "^4.1.2",
    "commit-verify": "^1.1.0",
    "esbuild": "0.19.2",
    "eslint": "^8.47.0",
    "eslint-plugin-sakina": "^4.3.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "lodash": "4.17.21",
    "only-allow": "^1.1.1",
    "prettier": "^3.0.2",
    "prettier-plugin-organize-imports": "^3.2.3",
    "prettier-plugin-packagejson": "^2.4.5",
    "rimraf": "^5.0.1",
    "sort-package-json": "^1.57.0",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6",
    "zx": "^7.2.3"
  },
  "lint-staged": {
    "*.{jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "license": "MIT",
  "engines": {
    "pnpm": "^8",
    "node": ">=18",
    "yarn": "forbidden, use pnpm",
    "npm": "forbidden, use pnpm"
  },
  "pnpm": {
    "overrides": {
      "esbuild": "$esbuild"
    }
  },
  "packageManager": "pnpm@8.6.12"
}
